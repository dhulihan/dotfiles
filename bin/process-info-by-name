#!/bin/bash
# get helpful process info by name
pids=$(pidof "$1")

if [ -z "$pids" ]; then
    echo "No processes found for '$process_name'"
    exit 0
fi

for pid in $pids; do
    cwd=$(pwdx $pid)
    echo "PID: $pid CWD: $cwd"
    echo "  Open Files: $(lsof -p $pid | wc -l)"
    echo "  CMD: $(ps -p $pid -o command=)"
    echo
done
