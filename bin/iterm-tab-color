#!/bin/bash

case $1 in
green)
echo -e "\033]6;1;bg;red;brightness;0\a"
echo -e "\033]6;1;bg;green;brightness;128\a"
echo -e "\033]6;1;bg;blue;brightness;0\a"
;;
red)
echo -e "\033]6;1;bg;red;brightness;255\a"
echo -e "\033]6;1;bg;green;brightness;0\a"
echo -e "\033]6;1;bg;blue;brightness;0\a"
;;
darkred)
echo -e "\033]6;1;bg;red;brightness;128\a"
echo -e "\033]6;1;bg;green;brightness;0\a"
echo -e "\033]6;1;bg;blue;brightness;0\a"
;;
orange)
echo -e "\033]6;1;bg;red;brightness;181\a"
echo -e "\033]6;1;bg;green;brightness;113\a"
echo -e "\033]6;1;bg;blue;brightness;24\a"
;;
yellow)
echo -e "\033]6;1;bg;red;brightness;128\a"
echo -e "\033]6;1;bg;green;brightness;128\a"
echo -e "\033]6;1;bg;blue;brightness;10\a"
;;
purple)
echo -e "\033]6;1;bg;red;brightness;128\a"
echo -e "\033]6;1;bg;green;brightness;0\a"
echo -e "\033]6;1;bg;blue;brightness;128\a"
;;
darkpurple)
echo -e "\033]6;1;bg;red;brightness;64\a"
echo -e "\033]6;1;bg;green;brightness;0\a"
echo -e "\033]6;1;bg;blue;brightness;64\a"
;;
blue)
echo -e "\033]6;1;bg;red;brightness;0\a"
echo -e "\033]6;1;bg;green;brightness;0\a"
echo -e "\033]6;1;bg;blue;brightness;128\a"
;;
darkblue)
echo -e "\033]6;1;bg;red;brightness;0\a"
echo -e "\033]6;1;bg;green;brightness;0\a"
echo -e "\033]6;1;bg;blue;brightness;64\a"
;;
aqua)
echo -e "\033]6;1;bg;red;brightness;16\a"
echo -e "\033]6;1;bg;green;brightness;221\a"
echo -e "\033]6;1;bg;blue;brightness;255\a"
;;
gray)
echo -e "\033]6;1;bg;red;brightness;192\a"
echo -e "\033]6;1;bg;green;brightness;192\a"
echo -e "\033]6;1;bg;blue;brightness;192\a"
;;
black)
echo -e "\033]6;1;bg;red;brightness;0\a"
echo -e "\033]6;1;bg;green;brightness;0\a"
echo -e "\033]6;1;bg;blue;brightness;0\a"
;;
white)
echo -e "\033]6;1;bg;red;brightness;255\a"
echo -e "\033]6;1;bg;green;brightness;255\a"
echo -e "\033]6;1;bg;blue;brightness;255\a"
;;
esac
