# start a dev session in the current dir
set -x

# check if we're in
NON_DEV_DIRS=( \
  "$HOME/Downloads" \
)
for NON_DEV_DIR in "${NON_DEV_DIRS[@]}" ; do
  echo $NON_DEV_DIR
	if [[ $PWD == "$NON_DEV_DIR" ]] ; then
    echo "$PWD is a non-dev dir not creating dev session"
    return
  else
    echo "$PWD is a dev dir"
  fi
done

(git checkout main || git checkout master) && git pull origin

# don't start up the project if we're already in tmux
if [[ -z $TMUX ]] ; then
	tmux-session
else
	# we're already in tmux
	echo "already in tmux"
fi
set +x
