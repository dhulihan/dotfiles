linters:
  enable-all: true
  #fast: true
  disable:
  - exhaustivestruct
  - exhaustruct
  - exhaustive
  - lll
  - wrapcheck
  - varnamelen
  - funlen
  - interfacer
  - scopelint
  - maligned
  - gofumpt
  - dupl # buggy, showing false positives
  - paralleltest
  - gochecknoglobals

severity:
  default-severity: info
