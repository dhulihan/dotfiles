run:
  max-same-issues: 0
linters:
  enable-all: true
  fast: true
  disable:
  - exhaustivestruct
  - exhaustruct
  - exhaustive
  - lll
  - wrapcheck
  - varnamelen
  - funlen
  - interfacer
  - scopelint
  - maligned
  - gofumpt
  - dupl # buggy, showing false positives
  - paralleltest
  - nosnakecase
  - testpackage
  - gochecknoglobals

severity:
  default-severity: info
